<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.zq.mapper.CategoryMapper">
  <resultMap id="BaseResultMap" type="com.springboot.zq.pojo.Category">
    <id column="content_id" jdbcType="VARCHAR" property="contentId" />
    <result column="content_name" jdbcType="VARCHAR" property="contentName" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
    delete from category
    where content_id = #{contentId,jdbcType=VARCHAR}
  </delete>
  <insert id="insert" parameterType="com.springboot.zq.pojo.Category">
    insert into category (content_id, content_name)
    values (#{contentId,jdbcType=VARCHAR}, #{contentName,jdbcType=VARCHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.springboot.zq.pojo.Category">
    update category
    set content_name = #{contentName,jdbcType=VARCHAR}
    where content_id = #{contentId,jdbcType=VARCHAR}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
    select content_id, content_name
    from category
    where content_id = #{contentId,jdbcType=VARCHAR}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select content_id, content_name
    from category
  </select>
</mapper>